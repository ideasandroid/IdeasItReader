<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:adsdk="http://schemas.android.com/apk/res/com.ideasandroid.itreader"
	android:background="#FFFFFF"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<WebView android:id="@+id/googleAdsWebView"
	    android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="50dp"/>
	<ListView android:id="@android:id/list"
	android:divider="@drawable/list_divider"
		android:dividerHeight="1dip"
		android:layout_alignParentTop="true" android:layout_above="@id/googleAdsWebView"
		android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:cacheColorHint="#FFFFFF">
	</ListView>
	<TextView android:id="@android:id/empty" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:layout_below="@android:id/list"
		android:layout_above="@id/googleAdsWebView" android:text="暂无资讯" />
</RelativeLayout>